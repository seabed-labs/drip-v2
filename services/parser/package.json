{
  "name": "@dcaf/drip-parser",
  "version": "0.1.0",
  "description": "Worker to parse drip program accounts and instructions.",
  "author": "Dcaf Labs",
  "license": "MIT",
  "private": true,
  "main": "src/index.ts",
  "types": "src/index.d.ts",
  "scripts": {
    "prepack": "yarn run build",
    "build": "yarn run build:api-codec && yarn run tsc",
    "build:api-codec": "yarn run tsoa spec-and-routes --yaml && yarn run prettier:fix && yarn run lint:fix",
    "clean": "rm -rf dist | true && rm -rf tsconfig.tsbuildinfo | true",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prettier:fix": "prettier --write ./src swaggerApi.yaml"
  },
  "devDependencies": {
    "@openapi-io-ts/cli": "^0.5.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.5.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@dcaf/drip-types": "0.1.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "tsoa": "^5.1.1"
  }
}
