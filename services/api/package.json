{
  "name": "@dcaf/drip-api",
  "version": "0.1.0",
  "description": "Drip rest Api and indexer.",
  "author": "Dcaf Labs",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist | true && rm -rf tsconfig.tsbuildinfo | true && rm -rf src/generated",
    "prepack": "yarn run build",
    "build": "yarn run build:db-types && yarn run build:anchor-types && yarn run build:api-spec && yarn run build:tsc",
    "build:db-types": "yarn migrate:up && yarn run ts-node scripts/zapatos",
    "build:anchor-types": "yarn run anchor-client-gen ./drip_v2.json ./src/generated/anchor",
    "build:api-spec": "yarn run tsoa spec-and-routes --yaml",
    "build:tsc": "yarn run tsc",
    "start": "node dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "migrate:up": "dbmate -e API_DATABASE_URL --wait up",
    "migrate:down": "dbmate -e API_DATABASE_URL rollback",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:fix": "yarn run lint:eslint:fix && yarn run lint:prettier:fix",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts . ",
    "lint:prettier": "prettier \"*/**/*{.js,.ts,.yaml}\" --check --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix --ext .ts . ",
    "lint:prettier:fix": "prettier --write \"*/**/*{.js,.ts,.yaml}\" --ignore-path .gitignore",
    "test": "cross-env DRIP_PROGRAM_ID=74XYB4agZ83msRxmTGvNDc8D2z8T55mfGfz3FAneNSKk API_RPC_URL=http://localhost:8899 jest --coverage"
  },
  "devDependencies": {
    "@dcaf/anchor-client-gen": "0.28.1-beta.6",
    "@types/bn.js": "^5.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "cross-env": "^7.0.3",
    "dbmate": "^2.5.0",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nock": "^13.3.1",
    "prettier": "^2.5.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.27.0",
    "@dcaf/drip": "0.1.0",
    "@dcaf/drip-types": "0.1.0",
    "@solana/web3.js": "1.77.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "bn.js": "^5.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "pg": "^8.11.1",
    "tsoa": "^5.1.1",
    "zapatos": "^6.1.4"
  }
}
