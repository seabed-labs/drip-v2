{
  "name": "@dcaf/drip-fetcher",
  "version": "0.1.0",
  "description": "Worker to parse drip program accounts and instructions.",
  "author": "Dcaf Labs",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "yarn run build",
    "start": "node dist/index.js",
    "start:dev": "yarn run ts-node src/index.ts",
    "build": "yarn run build:api-spec && yarn run tsc",
    "build:api-spec": "yarn run tsoa spec-and-routes --yaml && yarn run lint:fix",
    "clean": "rm -rf dist | true && rm -rf tsconfig.tsbuildinfo | true",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:fix": "yarn run lint:eslint:fix && yarn run lint:prettier:fix",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts . ",
    "lint:prettier": "prettier \"*/**/*{.js,.ts,.yaml}\" --check --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix --ext .ts . ",
    "lint:prettier:fix": "prettier --write \"*/**/*{.js,.ts,.yaml}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/restify-errors": "^4.3.5",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.27.0",
    "@dcaf/drip": "0.1.0",
    "@dcaf/drip-types": "0.1.0",
    "@solana/web3.js": "1.77.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "bn.js": "^5.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "restify-errors": "^8.0.2",
    "tsoa": "^5.1.1"
  }
}
