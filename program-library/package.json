{
    "name": "@dcaf/drip-program",
    "version": "0.1.0",
    "author": "Dcaf Labs",
    "license": "UNLICENSED",
    "type": "module",
    "scripts": {
        "build": "anchor build && cp ./target/idl/drip_v2.json ./idl/drip_v2.json  && cp ./target/types/drip_v2.ts ./idl/drip_v2.ts",
        "clean": "rm -rf target && rm -rf node_modules",
        "lint": "yarn run lint:eslint && yarn run lint:prettier",
        "lint:fix": "yarn run lint:eslint:fix && yarn run lint:prettier:fix",
        "lint:eslint": "eslint --ignore-path .gitignore --ext .ts . ",
        "lint:prettier": "prettier \"*/**/*{.js,.ts,.yaml}\" --check --ignore-path .gitignore",
        "lint:eslint:fix": "eslint --ignore-path .gitignore --fix --ext .ts . ",
        "lint:prettier:fix": "prettier --write \"*/**/*{.js,.ts,.yaml}\" --ignore-path .gitignore",
        "localnet": "ANCHOR_WALLET=./local.json yarn run ts-node ./scripts/localnet.ts",
        "drip": "ANCHOR_WALLET=./local.json yarn run ts-node ./scripts/drip.ts",
        "test": "anchor test"
    },
    "dependencies": {
        "@coral-xyz/anchor": "0.27.0",
        "@solana/spl-token": "0.3.8",
        "@solana/spl-token-0-3-8": "npm:@solana/spl-token@0.3.8",
        "@solana/web3.js": "^1.77.3",
        "bip39": "^3.1.0",
        "child_process": "^1.0.2",
        "dotenv": "^16.3.1",
        "ed25519-hd-key": "^1.3.0",
        "node-fetch": "2.6.11",
        "tweetnacl": "^1.0.3"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.5",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^9.0.0",
        "@types/node": "^20.3.3",
        "@types/node-fetch": "2.6.4",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.9.0",
        "eslint-plugin-prettier": "^4.2.1",
        "mocha": "^9.0.3",
        "prettier": "^2.5.1",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    }
}
